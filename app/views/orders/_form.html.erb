<%= form_for @order do |f| %>

	<div class = "form-group">
		<%= f.label :user %>
		<%= f.text_field :user, class: 'form-control' %>
	</div>

	<div class = "form-group">
		<%= f.label :place %>
		<%= f.number_field :place, class: 'form-control' %>
	</div>

	<div class = "form-group">
		<%= f.label :cost %>
		<%= f.number_field :cost, class: 'form-control' %>
	</div>

	<div class = "form-group date">
		<%= f.label :date_from %>
		<%= f.date_select :date_from, class: 'form-control' %>
	</div>

	<div class = "form-group date">
		<%= f.label :date_to %>
		<%= f.date_select :date_to, class: 'form-control' %>
	</div>

	<div class = "form-group date">
		<%= f.submit 'Подтвердить', class: 'btn btn-primary' %>
		<%= link_to 'Назад', :back, class: 'btn btn-outline-secondary' %>
	</div>
<% end %>