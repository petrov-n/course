<!DOCTYPE html>
<html>
  <head>
    <title>Car Park 24</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class = "container">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <ul class="nav navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="<%= root_path %>"> CarPark24 </a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="<%= statics_cost_url %>"> Стоимость </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= statics_travel_url %>"> Проезд </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= statics_contacts_url %>"> Контакты </a>
      </li>
    </ul>

   <%#  <ul class="navbar-nav pull-xs-right">
   <%# <%= link_to 'Бронирование', new_order_path, class: 'btn btn-outline-primary pull-xd-right' %>

   <%#  <%= link_to 'Панель управления', orders_path, class: 'btn btn-outline-primary pull-xd-right' %> 

   <ul class="navbar-nav offset-md-5">

          <% if user_signed_in? %>
            <li><a href="<%= new_order_path %>"><%= 'Сделать заказ' %></a></li>
              <% if current_user.admin? %>
                <li><a href="<%= orders_path %>"><%= 'Панель управления' %></a></li>
              <%end%>
              <li style="float:right">
                 <%= link_to 'Выход', destroy_user_session_path, method: :delete%>
              </li>
          <% else %>
            <li style="float:right" class="navbar-nav offset-md-10">
                <%= link_to 'Регистрация', new_user_registration_path %>
               </li>
              <li style="float:right"class="navbar-nav offset-md-1">
                <%= link_to 'Вход', new_user_session_path %>
             </li>
          <% end %>
        </ul>

  </nav>
  </div>

<div class = "container main">
    <div class="row">
      <div class="col-md-12">
        <% flash.each do |name, message| %>
          <div class="alert <%= bootstrap_class_for(name) %>">
           <%#  <% <button class="close" data-dimiss="alert">&times;</button> %>
            <%= message %>
          </div>
        <% end %>
      </div>
    </div>
    <%= yield %>
  </div>

  </body>
</html>
